#!/usr/bin/env perl
use strict;
use warnings;

my $index = `git diff --color --stat --cached`;
if ($index) {
    print "Index:\n";
    print $index;
}

my $wc = `git diff --color --stat`;

if ($wc) {
    print "Working tree:\n";
    print $wc;
}

my $untracked_files = `git ls-files -z --exclude-per-directory=.gitignore --exclude-from=.git/info/exclude --others`;
if ($untracked_files) {
    print "Untracked files:\n";
    print map { " $_\n" } split "\0", $untracked_files;
}


